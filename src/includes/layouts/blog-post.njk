---
layout: 'base.njk'
---

<article class="card list-unstyled d-flex">
    <h2>{{ title }}</h2>

    <hr aria-hidden="true">

    <figure>
        <img class="md-image" src="{{ image }}" alt="{{ imageAlt }}">
        <figcaption>
            {{ figCaption }}
        </figcaption>
    </figure>

    {{ content | safe }}
</article>